    var serverMax = ["<%=one.getID()%>", "<%=two.getID()%>", "<%=three.getID()%>", "<%=four.getID()%>", "<%=five.getID()%>", "<%=six.getID()%>", "<%=seven.getID()%>", "<%=eight.getID()%>"];
    var images = 8;
    

    function allowDrop(ev) {
        ev.preventDefault();
    }
    
    function myFunction() {
        document.getElementById("demo").innerHTML = "YOU CLICKED ME!";
    }
    
    function displayServerInfo(number){
    	//document.getElementByID("info").innerHTML=serverMax[parseInt(number)];
       alert(serverMax[2]);

    }
    
    

    function drag(ev) {
        ev.dataTransfer.setData("text/html", ev.target.id);
    }

    function drop(ev) {
        ev.preventDefault();
        
        var img = document.createElement("IMG");
        img.src = "server.jpg";
        document.getElementById("rackinner2").appendChild(img);

        images--;
        change();
        //alert("server added to rack 2" + this);
    }

    function change() {
      var stuff = "";
      for (var i = 0; i < images; i++) {
          stuff += "<img src='server.jpg' id='drag' draggable='true' ondragstart='drag(event)' />";
      };
      //alert("innerHTML" + stuff);
      document.getElementById("rackinner1").innerHTML = stuff;
    }
    </script>
